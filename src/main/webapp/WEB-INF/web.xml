<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE web-app PUBLIC
 "-//Oracle Corporation//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    <servlet>
      <servlet-name>cemetery</servlet-name>
      <jsp-file>/cemetery.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>veteran</servlet-name>
        <jsp-file>/veteran.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>contact</servlet-name>
        <jsp-file>/contact.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>add-cemetery</servlet-name>
        <servlet-class>myapp.AddCemeteryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>add-veteran</servlet-name>
        <servlet-class>myapp.AddVeteranServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cemetery</servlet-name>
        <url-pattern>/cemetery/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>veteran</servlet-name>
        <url-pattern>/veteran/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>contact</servlet-name>
        <url-pattern>/contact</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>add-cemetery</servlet-name>
        <url-pattern>/_debug/add-cemetery</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>add-veteran</servlet-name>
        <url-pattern>/_debug/add-veteran</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
